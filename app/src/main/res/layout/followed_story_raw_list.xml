<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/list_raw_selector"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/followed_news_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="India"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="20sp"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/followed_news_title"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="#000"
        android:paddingBottom="10dp"
        android:singleLine="false"
        android:textSize="18sp"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
       android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:paddingRight="10dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/followed_news"
            android:layout_width="wrap_content"
            android:background="@drawable/ic_timeline"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="15dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/followed_news_delete"
            android:layout_width="wrap_content"
            android:background="@drawable/ic_delete"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:layout_height="wrap_content" />
    </RelativeLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/followed_news_date"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="20/05/1990"
            android:textColor="#000"
            android:paddingLeft="10dp"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/followed_news_publisher"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Hindistan times"
            android:layout_gravity="end"
            android:gravity="end"
            android:paddingRight="10dp"
            android:textColor="@color/saffron"
            android:paddingLeft="10dp"
            android:textSize="16sp"
            />

        </LinearLayout>
</LinearLayout>
