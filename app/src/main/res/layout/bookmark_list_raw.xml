<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bookmark_list_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="India"
        android:textSize="18sp"
        android:textColor="#000"
        />
        <ImageButton
            android:id="@+id/bookmark_list_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_delete"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/bookmarked_title"
        android:layout_width="fill_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        android:textColor="#000"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bookmarked_date"
        android:layout_width="wrap_content"

        android:textColor="@color/saffron"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/bookmarked_publisher"
            android:layout_width="wrap_content"
            android:textColor="@color/saffron"
            android:layout_alignParentRight="true"
            android:text="Hindustan Times"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
